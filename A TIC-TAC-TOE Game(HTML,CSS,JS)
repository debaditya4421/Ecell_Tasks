        function winner() {
            w.style.display = 'block';
            if (win1 == 1)
                document.getElementById('w').innerHTML = "1";
            if (win2 == 1)
                document.getElementById('w').innerHTML = "2";
            if (win1 == 0 && win2 == 0) {
                w.innerHTML = "Well played! It's a TIE";
            }
